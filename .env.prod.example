# CodeRunner v2.0 - Production Environment Configuration
# Copy to .env.prod and update values for production

# Server Configuration
NODE_ENV=production
PORT=8080

# Database Configuration (CHANGE THESE IN PRODUCTION)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=coderunner
DB_USER=coderunner
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!@#

# JWT Configuration (CHANGE THIS IN PRODUCTION)
JWT_SECRET=CHANGE_THIS_SUPER_SECRET_JWT_KEY_min_32_chars!@#$%^&*
JWT_EXPIRES_IN=7d

# Redis Configuration (CHANGE THIS IN PRODUCTION)
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_123!@#

# CORS Configuration (UPDATE FOR YOUR DOMAIN)
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=warn

# Security
BCRYPT_ROUNDS=12

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# SSL/HTTPS (if using Nginx)
SSL_CERT_PATH=/etc/ssl/certs/coderunner.crt
SSL_KEY_PATH=/etc/ssl/private/coderunner.key

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Deployment
IMAGE_TAG=latest

# External Services (configure as needed)
AGENTSPHERE_API_URL=https://api.agentsphere.com
AGENTSPHERE_API_KEY=your_agentsphere_api_key_here

# Production Database URL (alternative format)
# DATABASE_URL=postgresql://coderunner:password@postgres:5432/coderunner