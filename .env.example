# Server Configuration
# IMPORTANT: Ports 3000-3009 are RESERVED by other services
# CodeRunner v2.0 uses the 8080-8090 range
PORT=8080
NODE_ENV=development

# Testing Configuration
TEST_BASE_URL=http://localhost:8088

# Frontend Development
FRONTEND_DEV_PORT=8083
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=8081

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coderunner
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
OAUTH_CALLBACK_URL=http://localhost:8080
FRONTEND_URL=http://localhost:8083

# CORS Configuration
CORS_ORIGIN=http://localhost:8083

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AgentSphere Integration
# Get your API key from: https://www.agentsphere.run/apikey
AGENTSPHERE_DOMAIN=agentsphere.run
AGENTSPHERE_API_KEY=your_agentsphere_api_key_here

# Port Usage Rules
# ================
# 8080 - Main API Server (Production/Development)
# 8081 - WebSocket Server  
# 8088 - Test API Server
# 8083 - Frontend Development Server
# 
# RESERVED: Ports 3000-3009 are used by other services
# DO NOT USE these ports in CodeRunner v2.0